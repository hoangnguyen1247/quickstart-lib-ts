{
    "name": "quickstart-lib-ts",
    "version": "0.0.1",
    "description": "Quickstart lib ts",
    "main": "index.js",
    "license": "MIT",
    "dependencies": {},
    "devDependencies": {
        "@babel/cli": "^7.10.3",
        "@babel/core": "^7.10.3",
        "@babel/preset-env": "^7.10.3",
        "@babel/preset-typescript": "^7.10.1",
        "@types/chai": "^4.2.11",
        "@types/mocha": "^7.0.2",
        "@types/node": "^12.7.4",
        "babel-plugin-module-resolver": "^4.0.0",
        "babel-preset-minify": "^0.5.1",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "cross-env": "^7.0.2",
        "mocha": "^8.1.2",
        "ts-mocha": "^7.0.0",
        "typescript": "^3.9.5"
    },
    "scripts": {
        "type-check": "cross-env NODE_PATH=. tsc --noEmit",
        "type-check:watch": "npm run type-check -- --watch",
        "build": "cross-env NODE_PATH=. npm run build:types && npm run build:js",
        "build:types": "tsc --emitDeclarationOnly",
        "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps false --presets minify",
        "build:js:sourcemap": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
        "test:mocha": "cross-env NODE_PATH=. ts-mocha test/test.ts --timeout=60000 --exit",
        "test": "npm run type-check && npm run test:mocha"
    }
}
